<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="TextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:background">@color/Jonquil</item>
        <item name="android:padding">@dimen/elevation</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- GettOverHere -->
    <style name="AppTheme" parent= "Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customization -->
        <item name= "colorPrimary">@color/Vampire_Black</item>
        <item name= "colorPrimaryDark">@color/Jonquil</item>
        <item name= "colorAccent">@color/Tumbleweed</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>