<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="@color/Raisin_Black"
        app:cardCornerRadius="@dimen/elevation"
        app:cardElevation="@dimen/elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <TextView
                android:id="@+id/date_row"
                style="@style/TextStyle"
                android:layout_width="180dp"
                android:layout_height="42dp"
                android:layout_marginTop="16dp"
                android:elevation="@dimen/elevation"
                android:textColor="@color/Vampire_Black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="pull date info"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.5" />

            <TextView
                android:id="@+id/time_row"
                style="@style/TextStyle"
                android:layout_width="180dp"
                android:layout_height="42dp"
                android:layout_marginTop="16dp"
                android:background="@color/Jonquil"
                android:elevation="@dimen/elevation"
                android:textColor="@color/Vampire_Black"
                app:layout_constraintBottom_toTopOf=""
                app:layout_constraintEnd_toStartOf="pull time info"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.5" />

            <TextView
                android:id="@+id/where_to_row"
                style="@style/TextStyle"
                android:elevation="@dimen/elevation"
                android:textColor="@color/Vampire_Black"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="70dp" />

            <TextView
                android:id="@+id/from_row"
                style="@style/TextStyle"
                android:elevation="@dimen/elevation"
                android:textColor="@color/Vampire_Black"
                tools:layout_editor_absoluteY="140dp" />

            <TextView
                android:id="@+id/cost_row"
                style="@style/TextStyle"
                android:elevation="@dimen/elevation"
                android:textColor="@color/Vampire_Black"
                tools:layout_editor_absoluteY="215dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>